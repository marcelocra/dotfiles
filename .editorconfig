# EditorConfig settings.

# Tells EditorConfig to stop looking upwards for other settings.
root = true


[*]
# Creates a base setting for all files, to be overriden for specific files in the next sections.

indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8
spelling_language = pt-BR
max_line_length = 100


[*.{py,sh,zsh,bash}]

indent_size = 4
max_line_length = 80


[Makefile]
# I don't use `make`, but kept this as an example on how to use tabs.

indent_style = tab
tab_width = 1


[*.{fs,fsi,fsx}]

indent_size = 4


[*.{clj,cljs,cljc}]
# Let Clojure auto-formatters figure this out.

indent_size = unset
max_line_length = unset

