debug() {
  if [ "$MCRA_DEBUG" = "" ] || [ "$MCRA_DEBUG" = "false" ] || [ "$MCRA_DEBUG" = "0" ]
  then
    return 0
  fi

  notify-send -u warning 'Debugging...' "$@"
}

