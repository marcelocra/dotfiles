REQUIRED_ENVS=''

verify_defined() {
    local env_name="$1"
    local env_value
    eval env_value=\$$1

    if [ -z "$env_value" ]; then
        REQUIRED_ENVS="${REQUIRED_ENVS}'$env_name' must be defined with the $2.\n\n"
    fi
}

