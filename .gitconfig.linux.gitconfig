# Linux-only git configs.

[diff]
    tool = kitty
    guitool = kitty.gui

    # # When kitty is not available.
    # tool = nvim -d

    # TODO: Not sure what is this.
    # submodule = log

[difftool]
    prompt = false
    trustExitCode = true

[difftool "kitty"]
    cmd = kitten diff $LOCAL $REMOTE

[difftool "kitty.gui"]
    cmd = kitten diff $LOCAL $REMOTE
