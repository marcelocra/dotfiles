// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "agent": {
    "message_editor_min_lines": 4,
    "always_allow_tool_actions": true,
    "use_modifier_to_send": false,
    "play_sound_when_agent_done": true,
    "model_parameters": [
      // Optimized for pure logic, complex refactoring, and deep technical accuracy
      {
        "provider": "openrouter",
        "model": "qwen/qwen3-coder",
        "temperature": 0.2,
      },
      // Best ROI for fast exploration and general architectural discussions
      {
        "provider": "openrouter",
        "model": "google/gemini-3-flash-preview",
        "temperature": 0.5,
      },

      // High-efficiency workhorse for summaries and commit logic
      {
        "provider": "openrouter",
        "model": "deepseek/deepseek-v3.2",
        "temperature": 0.1,
      },
      // Maximum speed for real-time code completion and inline suggestions
      {
        "provider": "openrouter",
        "model": "x-ai/grok-code-fast-1",
        "temperature": 0.3,
      },
      // The "Surgeon": use for mission-critical code where precision is non-negotiable
      {
        "provider": "openrouter",
        "model": "anthropic/claude-sonnet-4.5",
        "temperature": 0.1,
      },
    ],
    "default_model": {
      "provider": "openrouter",
      "model": "google/gemini-3-flash-preview",
    },
    "inline_assistant_model": {
      "provider": "openrouter",
      "model": "x-ai/grok-code-fast-1",
    },
    "thread_summary_model": {
      "provider": "openrouter",
      "model": "deepseek/deepseek-v3.2",
    },
    "commit_message_model": {
      "provider": "openrouter",
      "model": "deepseek/deepseek-v3.2",
    },
  },

  "terminal": {
    "font_features": {
      "zero": true,
    },

    // "font_size": 12.0,
    // "font_family": "Cascadia Code NF",
    "font_weight": 350,
    // "font_fallbacks": [
    //   "MesloLGS Nerd Font Mono",
    //   "MesloLGS NF",
    //   "JetBrainsMono Nerd Font",
    //   "Cascadia Code NF",
    //   "Consolas",
    // ],

    // "dock": "right",
    "option_as_meta": true,
    "cursor_shape": "block",
    "line_height": "standard",
    "blinking": "on",
  },

  "base_keymap": "VSCode",
  // "vim_mode": true,
  // "vim": {
  //   "toggle_relative_line_numbers": true
  // },

  "telemetry": {
    "diagnostics": false,
    "metrics": false,
  },

  "project_panel": {
    "hide_gitignore": false,
    "auto_fold_dirs": false,
  },
  "show_signature_help_after_edits": false,
  "auto_signature_help": false,
  "use_smartcase_search": true,
  "gutter": {
    "line_numbers": true,
    "folds": true,
  },
  "minimap": {
    "show": "auto",
    "thumb": "always",
    // "max_width_columns": 20
  },
  "scrollbar": {
    "show": "auto", // "always", "never", or "auto" (shows on scroll/hover)
    "axes": {
      "horizontal": false,
      "vertical": true,
    },
    "cursors": true, // Show cursor positions in scrollbar
    "git_diff": true, // Show git diff indicators
    "search_results": true, // Show search match indicators
    "diagnostics": "all", // Show error/warning indicators
  },
  "hover_popover_delay": 1000,
  "rounded_selection": false,
  "current_line_highlight": "all",
  "cursor_shape": "bar",
  "cursor_blink": true,
  "autosave": {
    "after_delay": {
      "milliseconds": 600000,
    },
  },
  "file_types": {
    "markdown": ["*.mdx", "*.svx"],
    "vimrc": ["vimrc"],
    "asciidoc": ["*.adoc"],
    "vue": ["*.vue"],
    "erb": ["*.erb"],
    "html": ["*.liquid", "*.svg"],
    "css": ["*.css"],
    "jsonc": ["json5"],
  },
  "completions": {
    "words": "enabled",
  },
  "show_completions_on_input": true,
  "show_whitespaces": "none",
  "show_edit_predictions": true,
  "edit_predictions": {
    "mode": "eager",
  },
  "features": {
    "edit_prediction_provider": "zed",
  },
  "indent_guides": {
    "enabled": false,
  },
  "wrap_guides": [80, 120],
  "preferred_line_length": 120,
  "soft_wrap": "bounded",
  "hard_tabs": false,
  "tab_size": 2,

  // "ui_font_family": "Geist", // Cascadia, Inter, etc.
  // "ui_font_size": 16,
  // "ui_font_weight": 400,
  // "ui_font_features": {
  //   "ss01": true,
  //   "ss19": true,
  //   "ss20": true,
  //   "calt": false
  // },

  // "buffer_font_family": "iMWritingDuo Nerd Font",
  "buffer_font_family": "Cascadia Code NF",
  // "buffer_font_size": 12.0,
  "buffer_font_weight": 350,
  "buffer_line_height": "comfortable",
  "buffer_font_fallbacks": ["MesloLGM Nerd Font Mono"],
  "buffer_font_features": {
    "zero": true,
  },

  // "theme": {
  //   "mode": "system",
  //   "light": "One Light",
  //   "dark": "One Dark"
  // },
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Andromeda",
  },

  "restore_on_startup": "none",

  "jupyter": {
    "enabled": true,
  },

  // "cursor_blink": true,
  "scroll_beyond_last_line": "one_page",

  "lsp": {
    "deno": {
      "settings": {
        "deno": {
          "enable": true,
        },
      },
    },
  },

  "languages": {
    "TypeScript": {
      "language_servers": [
        "deno",
        "!typescript-language-server",
        "!vtsls",
        "!eslint",
      ],
      "formatter": "language_server",
    },
    "TSX": {
      "language_servers": [
        "deno",
        "!typescript-language-server",
        "!vtsls",
        "!eslint",
      ],
      "formatter": "language_server",
    },
  },
}
