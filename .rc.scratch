#!/usr/bin/env sh
# vim:tw=80:ts=4:sw=4:ai:et:ff=unix:fenc=utf-8:et:fixeol:eol:fdm=marker:fdl=0:fen:ft=sh


main() {
    local name="scratch-wez"

    # If session exists, connect to it. Otherwise, create it.
    if tmux has -t $name >/dev/null 2>&1; then
        if tmux lsc | grep " $name " >/dev/null 2>&1; then
            tmux detach -s $name
        else
            tmux attach -t $name >/dev/null 2>&1
        fi
    else
        tmux new -s $name >/dev/null 2>&1
    fi
}


main "$@"
